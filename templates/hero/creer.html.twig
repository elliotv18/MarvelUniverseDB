
{% extends 'base.html.twig' %}

{% block title %}Hello HeroController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    * {text-align: center;}
</style>

<div class="example-wrapper">
{{ form_start(formulaire) }}
    <div class="form">
        <div class="formu">
            {{ form_widget(formulaire.firstname, {'attr': {'placeholder': 'prenom'}}) }}
        </div>
        <div class="formu">
            {{ form_widget(formulaire.name, {'attr': {'placeholder': 'nom'}}) }}
        </div>
        <div class="formu">
            {{ form_widget(formulaire.pseudo, {'attr': {'placeholder': 'pseudo'}}) }}
        </div>
        <div class="formu">
            {{ form_widget(formulaire.description, {'attr': {'placeholder': 'description', 'cols': '50', 'rows':'5'}}) }}
        </div>
        
    </div>
{{ form_end(formulaire) }}

</div>
{% endblock %}
